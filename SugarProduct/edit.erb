<div class="toolbar">
	<h1 id="pageTitle">
		Edit Product
	</h1>
</div>

<form title="Edit Product" 
	  class="panel" 
	  id="SugarProduct_edit_form" 
	  method="POST" 
	  action="<%=url_for(:action => :update)%>" selected="true">
	<fieldset>
		<input type="hidden" name="id" value="<%=@SugarProduct.object%>"/>
		
		  <div class="row">
			  <label>Name</label>
			  <input type="text" name="SugarProduct[name]" value="<%=@SugarProduct.name%>"/>
		  </div>
		
		  <div class="row">
			  <label>Date Entered</label>
			  <input type="text" name="SugarProduct[date_entered]" value="<%=@SugarProduct.date_entered%>"/>
		  </div>
		
		  <div class="row">
			  <label>Date Modified</label>
			  <input type="text" name="SugarProduct[date_modified]" value="<%=@SugarProduct.date_modified%>"/>
		  </div>
		
		  <div class="row">
			  <label>Description</label>
			  <input type="text" name="SugarProduct[description]" value="<%=@SugarProduct.description%>"/>
		  </div>
		
		  <div class="row">
			  <label>Team Name</label>
			  <input type="text" name="SugarProduct[team_name]" value="<%=@SugarProduct.team_name%>"/>
		  </div>
		
		  <div class="row">
			  <label>List Price</label>
			  <input type="text" name="SugarProduct[list_price]" value="<%=display_number(@SugarProduct.list_price)%>"/>
		  </div>
		
		  <div class="row">
			  <label>Cost Price</label>
			  <input type="text" name="SugarProduct[cost_price]" value="<%=display_number(@SugarProduct.cost_price)%>"/>
		  </div>
		
		  <div class="row">
			  <label>Discount Price</label>
			  <input type="text" name="SugarProduct[discount_price]" value="<%=display_number(@SugarProduct.discount_price)%>"/>
		  </div>
		
		  <div class="row">
			  <label>Status</label>
			  <input type="text" name="SugarProduct[status]" value="<%=@SugarProduct.status%>"/>
		  </div>
		
		  <div class="row">
			  <label>Website</label>
			  <input type="text" name="SugarProduct[website]" value="<%=@SugarProduct.website%>"/>
		  </div>
		
		  <div class="row">
			  <label>Account</label>
			  <input type="text" name="SugarProduct[account_name]" value="<%=@SugarProduct.account_name%>"/>
		  </div>
		
	</fieldset>
	<input type="submit" value="Update"/>	
</form>