<form title="Edit Case" 
	  class="panel" 
	  id="SugarCase_edit_form" 
	  method="POST" 
	  action="<%=url_for('update')%>">
	<fieldset>
		<input type="hidden" name="id" value="<%=@SugarCase.object%>"/>
		
		  <div class="row">
			  <label>name: </label>
			  <input type="text" name="SugarCase[name]" value="<%=@SugarCase.name%>"/>
		  </div>
		
		  <div class="row">
			  <label>date_entered: </label>
			  <input type="text" name="SugarCase[date_entered]" value="<%=@SugarCase.date_entered%>"/>
		  </div>
		
		  <div class="row">
			  <label>created_by_name: </label>
			  <input type="text" name="SugarCase[created_by_name]" value="<%=@SugarCase.created_by_name%>"/>
		  </div>
		
		  <div class="row">
			  <label>description: </label>
			  <input type="text" name="SugarCase[description]" value="<%=@SugarCase.description%>"/>
		  </div>
		
		  <div class="row">
			  <label>assigned_user_name: </label>
			  <input type="text" name="SugarCase[assigned_user_name]" value="<%=@SugarCase.assigned_user_name%>"/>
		  </div>
		
		  <div class="row">
			  <label>case_number: </label>
			  <input type="text" name="SugarCase[case_number]" value="<%=@SugarCase.case_number%>"/>
		  </div>
		
		  <div class="row">
			  <label>type: </label>
			  <input type="text" name="SugarCase[type]" value="<%=@SugarCase.type%>"/>
		  </div>
		
		  <div class="row">
			  <label>status: </label>
			  <input type="text" name="SugarCase[status]" value="<%=@SugarCase.status%>"/>
		  </div>
		
		  <div class="row">
			  <label>priority: </label>
			  <input type="text" name="SugarCase[priority]" value="<%=@SugarCase.priority%>"/>
		  </div>
		
		  <div class="row">
			  <label>resolution: </label>
			  <input type="text" name="SugarCase[resolution]" value="<%=@SugarCase.resolution%>"/>
		  </div>
		
		  <div class="row">
			  <label>account_name: </label>
			  <input type="text" name="SugarCase[account_name]" value="<%=@SugarCase.account_name%>"/>
		  </div>
		
	</fieldset>
	<input type="submit" value="Update"/>
	<p align="center">
		<a href="<%=url_for('delete', @SugarCase.object)%>">
			<font color="#990000">Delete</font>
		</a>
	</p>
</form>