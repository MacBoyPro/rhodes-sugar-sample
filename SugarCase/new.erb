<div class="toolbar">
	<h1 id="pageTitle">
		New Case
	</h1>
</div>

<form title="New SugarCase" 
	  class="panel"
	  id="SugarCase_new_form" 
	  method="POST" 
	  action="<%=url_for(:action => :create)%>" selected="true">
	<fieldset>		
		<div class="row">
		  <label>Case Number</label>
		  <input type="text" name="SugarCase[case_number]"/>
	  </div>
		
		<div class="row">
		  <label>Priority</label>
		  <input type="text" name="SugarCase[priority]"/>
	  </div>
	  
	  <div class="row">
		  <label>Status</label>
		  <input type="text" name="SugarCase[status]"/>
	  </div>
	
	  <div class="row">
		  <label>Type</label>
		  <input type="text" name="SugarCase[type]"/>
	  </div>
		</fieldset>
			
			<fieldset>
	
		  <div class="row">
			  <label>Subject</label>
			  <input type="text" name="SugarCase[name]"/>
		  </div>
		
				  <div class="row">
					  <label>Description</label>					
						<textarea name="SugarCase[description]" rows="5" style="margin:6px;width:90%"></textarea>					
				  </div>
		
		
				  <div class="row">
					  <label>Resolution</label>
					  <input type="text" name="SugarCase[resolution]"/>
				  </div>
				
				</fieldset>
				
				<fieldset>
				
			  <div class="row">
				  <label>Assigned to</label>
				  <input type="text" name="SugarCase[assigned_user_name]"/>
			  </div>


			  <div class="row">
				  <label>Account Name</label>
				  <input type="text" name="SugarCase[account_name]"/>
			  </div>
			
				</fieldset>

		<fieldset>		
		  <div class="row">
			  <label>Modified On</label>
			  <input type="text" name="SugarCase[date_modified]"/>
		  </div>
		
		  <div class="row">
			  <label>Created On</label>
			  <input type="text" name="SugarCase[date_entered]"/>
		  </div>	
		
	</fieldset>
	<input type="submit" value="Create"/>
</form>