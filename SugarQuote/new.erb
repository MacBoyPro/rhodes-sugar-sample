<div class="toolbar">
	<h1 id="pageTitle">
		New Quote
	</h1>
</div>

<form title="New Quote" 
	  class="panel"
	  id="SugarQuote_new_form" 
	  method="POST" 
	  action="<%=url_for(:action => :create)%>" selected="true">
	<fieldset>		
	  <div class="row">
		  <label>Name</label>
		  <input type="text" name="SugarQuote[name]"/>
	  </div>
	
	  <div class="row">
		  <label>Quote #</label>
		  <input type="text" name="SugarQuote[quote_num]"/>
	  </div>

	  <div class="row">
		  <label>PO</label>
		  <input type="text" name="SugarQuote[purchase_order_num]"/>
	  </div>

	  <div class="row">
		  <label>Terms</label>
		  <input type="text" name="SugarQuote[payment_terms]"/>
	  </div>

	  <div class="row">
		  <label>Team</label>
		  <input type="text" name="SugarQuote[team_name]"/>
	  </div>

	  <div class="row">
		  <label>Assigned to</label>
		  <input type="text" name="SugarQuote[assigned_user_name]"/>
	  </div>

	  <div class="row">
		  <label>Street Address</label>
		  <input type="text" name="SugarQuote[billing_address_street]"/>
	  </div>
	
	  <div class="row">
		  <label>City</label>
		  <input type="text" name="SugarQuote[billing_address_city]"/>
	  </div>
	
	  <div class="row">
		  <label>State</label>
		  <input type="text" name="SugarQuote[billing_address_state]"/>
	  </div>

	  <div class="row">
		  <label>Postal Code</label>
		  <input type="text" name="SugarQuote[billing_address_postalcode]"/>
	  </div>

	  <div class="row">
		  <label>Country</label>
		  <input type="text" name="SugarQuote[billing_address_country]"/>
	  </div>
	
	  <div class="row">
		  <label>Opportunity</label>
		  <input type="text" name="SugarQuote[opportunity_name]"/>
	  </div>

	  <div class="row">
		  <label>Sub total</label>
		  <input type="text" name="SugarQuote[subtotal]"/>
	  </div>

	  <div class="row">
		  <label>Total</label>
		  <input type="text" name="SugarQuote[total]"/>
	  </div>
			
	</fieldset>
	<input type="submit" value="Create"/>
</form>