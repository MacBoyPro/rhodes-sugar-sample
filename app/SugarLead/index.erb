<div class="toolbar">
	<h1 id="pageTitle">
		Leads
	</h1>
</div>

<ul id="SugarLeads" title="Leads" selected="true">
<a class="button right_button" href="SugarLead/new" target="_self">New</a>

<% @SugarLeads.each do |lead| %>

<li class="overview">
<%= link_to "#{lead.first_name} #{lead.last_name}", :action => :show, :id => lead.object %>
<div>
<%= lead.account_name %><%= both_items_present?(lead.account_name, lead.status) ? "<span class='separator'>&nbsp;|&nbsp;</span>" : "" %><%= lead.status %>
</div>
</li>

<% end %>
</ul>