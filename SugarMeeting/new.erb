<div class="toolbar">
	<h1 id="pageTitle">
		New Meeting
	</h1>
</div>

<form title="New Meeting" 
	  class="panel"
	  id="SugarMeeting_new_form" 
	  method="POST" 
	  action="<%=url_for(:action => :create)%>" selected="true">
	<fieldset>		
	  <div class="row">
		  <label>Name</label>
		  <input type="text" name="SugarMeeting[name]"/>
	  </div>
	
	  <div class="row">
		  <label>Date Entered</label>
		  <input type="text" name="SugarMeeting[date_entered]"/>
	  </div>
	
	  <div class="row">
		  <label>Date Modified</label>
		  <input type="text" name="SugarMeeting[date_modified]"/>
	  </div>
	
	  <div class="row">
		  <label>Modified By</label>
		  <input type="text" name="SugarMeeting[modified_by_name]"/>
	  </div>
	
	  <div class="row">
		  <label>Created By</label>
		  <input type="text" name="SugarMeeting[created_by_name]"/>
	  </div>
	
	  <div class="row">
		  <label>Description</label>
		  <input type="text" name="SugarMeeting[description]"/>
	  </div>
	
	  <div class="row">
		  <label>Assigned To</label>
		  <input type="text" name="SugarMeeting[assigned_user_name]"/>
	  </div>
	
	  <div class="row">
		  <label>Location</label>
		  <input type="text" name="SugarMeeting[location]">
	  </div>
	
	  <div class="row">
		  <label>Duration Hours</label>
		  <input type="text" name="SugarMeeting[duration_hours]"/>
	  </div>
	
	  <div class="row">
		  <label>Duration Min</label>
		  <input type="text" name="SugarMeeting[duration_minutes]"/>
	  </div>
	
	  <div class="row">
		  <label>Date Start</label>
		  <input type="text" name="SugarMeeting[date_start]"/>
	  </div>
	
	  <div class="row">
		  <label>Date End</label>
		  <input type="text" name="SugarMeeting[date_end]"/>
	  </div>
	
	  <div class="row">
		  <label>Status</label>
		  <input type="text" name="SugarMeeting[status]"/>
	  </div>
	
	  <div class="row">
		  <label>Reminder Time</label>
			<select id="reminder_time" name="SugarMeeting[reminder_time]">
				<% reminder_time_index = 0 %>
				<% reminder_time_arr = [-1, 60, 300, 600, 900, 1800, 3600]%>
				<% %w(None 1\ Minute\ Prior 5\ Minutes\ Prior 10\ Minutes\ Prior 15\ Minutes\ Prior 30\ Minutes\ Prior 1\ Hour\ Prior).each do |state| %>
					<% selected = "" %>
					<option <%= selected %> value="<%= reminder_time_arr[reminder_time_index].to_s %>"><%= state %></option>
					<% reminder_time_index += 1%>
				<% end %>
			</select>
	  </div>
	
	  <div class="row">
		  <label>Contact Name</label>
		  <input type="text" name="SugarMeeting[contact_name]"/>
	  </div>
		
	</fieldset>
	<input type="submit" value="Create"/>
</form>